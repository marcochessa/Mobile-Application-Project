<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="right"
        android:orientation="horizontal">

        <Button
            android:id="@+id/evaluation_dialog_delete_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:theme="@style/DeleteButton"
            android:text="@string/delete"
            android:drawableRight="@drawable/baseline_delete_24"/>
    </LinearLayout>

    <TextView
        android:id="@+id/evaluation_dialog_sport_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Soccer"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="@color/black" />

    <RatingBar
        android:id="@+id/evaluation_dialog_ratingbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:theme="@style/MyRatingBar"
        android:stepSize="1" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/evaluation_dialog_cancel_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:theme="@style/SecondaryButton"
            android:clickable="true"
            android:focusable="true"
            android:text="Cancel" />

        <Button
            android:id="@+id/custom_dialog_button"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_margin="8dp"
            android:text="Confirm" />

    </LinearLayout>

</LinearLayout>